{
  "info": {
    "name": "SpringBoot Interview APIs",
    "_postman_id": "12345-abc",
    "description": "Collection for testing SpringBoot Interview Assignment with MySQL",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create User",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"username\": \"john\", \"email\": \"john@example.com\" }"
        },
        "url": {
          "raw": "http://localhost:8080/api/users",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "users"]
        }
      }
    },
    {
      "name": "Get Users (Paged)",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:8080/api/users?page=0",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "users"],
          "query": [{ "key": "page", "value": "0" }]
        }
      }
    },
    {
      "name": "Get User by ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:8080/api/users/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "users", "1"]
        }
      }
    },
    {
      "name": "Update User",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"username\": \"john updated\", \"email\": \"john2@example.com\" }"
        },
        "url": {
          "raw": "http://localhost:8080/api/users/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "users", "1"]
        }
      }
    },
    {
      "name": "External API Call",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:8080/api/users/external/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "users", "external", "1"]
        }
      }
    }
  ]
}
